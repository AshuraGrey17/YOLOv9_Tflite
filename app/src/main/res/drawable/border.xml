<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the solid background color to yellow -->
    <solid android:color="@color/gray"/> <!-- Using yellow color from colors.xml -->

    <!-- Set the border color and thickness -->
    <stroke
        android:color="@android:color/black"
        android:width="2dp"/> <!-- Border thickness -->

    <!-- Rounded corners -->
    <corners android:radius="12dp"/> <!-- Rounded corners -->
</shape>
