<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbg">

    <!-- ✅ Menu Button (Top-Left Corner) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/list" />

    <!-- ✅ Top Center Button -->
    <ImageView
        android:id="@+id/topCenterButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_round_remove_24"
        android:scaleType="centerCrop" />

    <!-- ✅ Cancel (X) Button -->
    <ImageView
        android:id="@+id/cancelMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_clear_24" />

    <!-- GPU Toggle wrapped in CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topCenterButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white">

        <ToggleButton
            android:id="@+id/isGpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textOff="@string/gpu"
            android:textOn="@string/gpu"
            android:checked="true"
            android:backgroundTint="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

    <!-- Map Button wrapped in CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topCenterButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white">

        <Button
            android:id="@+id/mapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/transparent"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>


    <!-- ✅ Detection Bottom Border -->
    <LinearLayout
        android:id="@+id/bottomBorder"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/topCenterButton"
        android:layout_marginTop="70dp"
        android:background="@drawable/border_rect"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Detection Rows -->
        <LinearLayout
            android:id="@+id/detection1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Detecting:"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detection2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Detecting:"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detection3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Detecting:"
                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
